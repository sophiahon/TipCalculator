<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:columnCount="4"
    android:rowCount="4"
    tools:context="com.example.sophiahon.tipcalculator.MainActivity">

    <EditText
        android:id="@+id/edt_txt_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:background="@color/colorPrimary"
        android:hint="@string/amount"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/edt_txt_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:hint="@string/percent"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip"
        android:layout_row="2"
        android:layout_column="0"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:layout_row="3"
        android:layout_column="0"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edt_txt_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:inputType="number"
        android:labelFor="@+id/edt_txt_tip_tip"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edt_txt_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_row="3"
        android:inputType="number"
        android:labelFor="@+id/edt_txt_total_total"
        android:textSize="30sp" />

    <SeekBar
        android:id="@+id/sb_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:layout_row="1" />


</GridLayout>
